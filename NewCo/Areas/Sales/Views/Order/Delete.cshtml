@model NewCo.Areas.Sales.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Elimina";
}

<h1>Elimina</h1>
@if (ViewBag.Error)
{
    <p style="color:red; font-stretch:expanded">@ViewBag.ErrorMessage)</p>
}
<h3>Sei sicuro di voler eliminare questo ordine?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <form asp-area="Sales" asp-controller="Order" asp-action="Delete" method="post">
        @Html.HiddenFor(m => m.Id)
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.No)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.No)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CustomerId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CustomerRef.Name)
            </dd>
        </dl>
        <br />

        <input type="submit" value="Elimina" class="btn btn-danger" />
        @Html.ActionLink("Annulla", "Index", "Order", null, new { @class = "btn btn-secondary" })
    </form>
</div>
